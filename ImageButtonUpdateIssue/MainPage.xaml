<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageButtonUpdateIssue.MainPage"
             xmlns:local="clr-namespace:ImageButtonUpdateIssue.Views"
             BackgroundColor="{StaticResource Tertiary}">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <local:CustomImageButton x:Name="image1" WidthRequest="64" HeightRequest="64"/>
            <local:CustomImageButton x:Name="image2" WidthRequest="64" HeightRequest="64"/>
            <local:CustomImageButton x:Name="image3" WidthRequest="64" HeightRequest="64"/>
            <local:CustomImageButton x:Name="image4" WidthRequest="64" HeightRequest="64"/>

            <Button x:Name="CounterBtn" Text="Click me" Clicked="OnButtonClicked" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
